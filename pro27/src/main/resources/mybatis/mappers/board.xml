<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
	<resultMap id="articlesResult" type="articleVO">
		<result property="articleNO" column="articleNO" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="writeDate" column="writeDate" />
	</resultMap>

<!-- 全掲示文を並ぶ -->
	<select id="selectAllArticlesList" parameterType="java.util.Map" resultMap="articlesResult">
	    <![CDATA[
	      SELECT * from (
	      select ROWNUM as recNum, ID, articleNO, title, content, writeDate
	      from (
		  select * from t_board1
		  ORDER BY articleNO DESC))
		  WHERE
		  recNum BETWEEN #{start} AND #{end}
	    ]]>
	</select>
	
	<select id="selectAllArticlesNo" resultType="int">
		<![CDATA[
			SELECT count(*) from t_board1		
		]]>
	</select>

<!-- 新しい文の追加 -->
	<insert id="insertNewArticle" parameterType="java.util.Map">
		<![CDATA[
			INSERT into t_board1(articleNO,  title, content, id)
			VALUES(#{articleNO}, #{title}, #{content}, #{id})
		]]>
	</insert>

<!-- 新しい文のarticleNOをもらう -->
	<select id="selectNewArticleNO" resultType="int">
		<![CDATA[
			SELECT  max(articleNO)+1 from t_board1		
		]]>
	</select>

<!-- articleNOをもらってDBから検索 -->
	<select id="selectArticle" resultType="articleVO" parameterType="int">
    <![CDATA[
      SELECT * from t_board1
      where articleNO = #{articleNO}		
    ]]>
	</select>

<!-- 掲示文を修正 -->
	<update id="updateArticle" parameterType="java.util.Map">
		update t_board1
		set title=#{title},
		content=#{content}
		where articleNO=#{articleNO}
	</update>

<!-- 掲示文の削除 -->
	<delete id="deleteArticle" parameterType="int">
    <![CDATA[
      delete from t_board1
      where 
      articleNO = #{articleNO} 
    ]]>
	</delete>
</mapper>